<h1>新しい動物を追加</h1>

<div class="form-container">
  <%= form_with model: @animal, url: home_create_path, method: :post, class: "animal-form" do |form| %>
    <% if @animal.errors.any? %>
      <div class="error-messages">
        <h2><%= @animal.errors.count %>つのエラーがあります：</h2>
        <ul>
          <% @animal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "動物の名前" %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :scientific_name, "学名" %>
      <%= form.text_field :scientific_name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :habitat, "生息地" %>
      <%= form.text_field :habitat, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :characteristics, "特徴" %>
      <%= form.text_area :characteristics, rows: 3, required: true %>
    </div>

    <div class="button-container">
      <%= form.submit "追加する", class: "submit-button" %>
      <%= link_to "戻る", home_top_path, class: "back-button" %>
    </div>
  <% end %>
</div>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #555;
  }

  .form-group input[type="text"],
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .button-container {
    display: flex;
    gap: 10px;
    margin-top: 30px;
  }

  .submit-button {
    background-color: #2ecc71;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    flex: 1;
  }

  .back-button {
    background-color: #95a5a6;
    color: white;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 4px;
    text-align: center;
    font-weight: bold;
    flex: 1;
  }

  .submit-button:hover {
    background-color: #27ae60;
  }

  .back-button:hover {
    background-color: #7f8c8d;
  }

  /* エラーメッセージのスタイル */
  .error-messages {
    color: #721c24;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
    padding: 15px;
    margin-bottom: 20px;
  }

  .error-messages h2 {
    font-size: 1.2em;
    margin-top: 0;
    margin-bottom: 10px;
  }

  .error-messages ul {
    margin: 0;
    padding-left: 20px;
  }
</style>
